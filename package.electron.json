{
  "name": "montex-erp-premium",
  "version": "1.0.0",
  "description": "MONTEX ERP Premium - Sistema de Gestão Empresarial para Indústria de Estruturas Metálicas",
  "main": "electron/main.js",
  "author": {
    "name": "Grupo MONTEX",
    "email": "contato@grupomontex.com.br"
  },
  "license": "UNLICENSED",
  "private": true,
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.montex.erp",
    "productName": "MONTEX ERP Premium",
    "copyright": "Copyright © 2026 Grupo MONTEX",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Grupo MONTEX"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MONTEX ERP"
    },
    "portable": {
      "artifactName": "MONTEX-ERP-\${version}-Portable.exe"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}
